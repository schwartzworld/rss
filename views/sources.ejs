<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Reddit style RSS</title>
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@exampledev/new.css@1.1.2/new.min.css">
    <!--[if IE]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <style>
        ul {
            list-style: none;
            padding: 0;
        }
        summary {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        details > summary::-webkit-details-marker {
            display: none;
        }
        .buttons {
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
        .buttons > button {
            background: blue;
            margin: 2px 0;
        }
        .preview {
            height: 60%;
            width: auto;
            padding: 0.5rem;
            display: block;
        }
    </style>
</head>

<body id="home">

<script>
    const hide = async (id) => {
        const res = await fetch(`/hide/${id}`, {
            method: 'POST'
        })
        if (res.ok) {
            location.reload();
            return false;
        }
    }

    const unhide = async (id) => {
        const res = await fetch(`/unhide/${id}`, {
            method: 'POST'
        })
        if (res.ok) {
            location.reload();
            return false;
        }
    }
</script>
<h1>RSS Feed</h1>
<h2>Active Feed</h2>
<nav>
    <ul>
        <li><a href="/hidden">Show Hidden Posts</a></li>
        <li>
            <details>
                <summary>Filter by Source</summary>
                <ul>
                    <% sources.map(({id, url}) => { %>
                        <li><a href="/sources/<%= id %>"><%= url %></a></li>
                    <% }) %>
                </ul>
            </details>
        </li>
    </ul>
</nav>
<div>
    <ul>
        <% posts.map((post) => { %>
            <li id='post-<%= post.id %>'>
                <details>
                    <summary>
                        <%if (post.preview) { %>
                            <img class="preview" src="<%= post.preview %>" />
                        <% } %>

                        <div>
                            <h3><a href="<%= post.link %>"><%= post.title %></a></h3>
                            <small><%= post.link.split('/')[2] %></small>
                            <%= new Date(post.pubDate).toDateString() %>
                        </div>
                        <div class="buttons">
                          <button onclick="hide(<%= post.id %>)">Hide Post</button>
                        </div>
                    </summary>
                    <div><%- post.description %></div>
                </details>
            </li>
        <% })%>
    </ul>
        <a href="<%= previous %>">previous page</a>
        <a href="<%= next %>">next page</a>
</div>
</body>
</html>

