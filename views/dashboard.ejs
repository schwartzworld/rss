<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Reddit style RSS</title>
    <link rel="stylesheet" href="../public/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@exampledev/new.css@1.1.2/new.min.css">
    <!--[if IE]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <style>
        ul {
            list-style: none;
            padding: 0;
            width: 100%;
        }
        li {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        li:hover {
            background: #444;
        }
        summary {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        details > summary::-webkit-details-marker {
            display: none;
        }
        .buttons {
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
        .buttons > button {
            background: blue;
            margin: 2px 0;
        }
        .preview {
            height: 60%;
            width: auto;
            padding: 0.5rem;
            display: block;
        }
    </style>
</head>

<body id="home">

<script>
    removeFeed = async (id) => {
        await fetch(`/feeds/${id}`, {
            method: 'DELETE',
        });
        location.reload();
    }

    addFeed = async (url) => {
        await fetch(`/feeds/${id}`, {
            method: 'POST',
            body: url,
        });
        location.reload();
    }
</script>
<h1>RSS Feed</h1>
<h2>Active Feed</h2>
<nav>
    <ul>
        <li><a href="/">Back to feed</a></li>
    </ul>
</nav>
<div>
    <ul>
        <form action="/feeds" method="post">
            <label for="name">Subscribe to a new Feed</label><br />
            <input id='name' name='name' type="text" placeholder="Enter a feed to subscribe">
            <input type="submit" />
        </form>
        <% sources.map(({id, url}) => { %>
            <li><a href="/sources/<%= id %>"><%= url %></a> <button onclick="removeFeed(<%= id %>)">delete feed</button></li>
        <% }) %>
    </ul>
</div>
</body>
</html>

