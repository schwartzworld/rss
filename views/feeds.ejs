<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Reddit style RSS</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@exampledev/new.css@1.1.2/new.min.css">
    <link rel="stylesheet" href="/css/style.css" type="text/css">
    <!--[if IE]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <style>
        li {
            display: flex;
            justify-content: space-between;
            padding: 2px 10px;
        }
        li:hover {
            background: lightblue;
        }
        li:hover > a {
            color: black;
        }
    </style>
</head>

<body id="home">

<script>
    removeFeed = async (id) => {
        await fetch(`/feeds/${id}`, {
            method: 'DELETE',
        });
        location.reload();
    }

    addFeed = async (url) => {
        await fetch(`/feeds/${id}`, {
            method: 'POST',
            body: url,
        });
        location.reload();
    }
    build = async (id) => {
        await fetch(`/build/${id}`, {
            method: "POST"
        })
    }
</script>
<h1>RSS Feed</h1>
<h2>Active Feed</h2>
<nav>
    <ul>
        <li><a href="/">Back to feed</a></li>
    </ul>
</nav>
<div>
    <ul>
        <form action="/feeds" method="post">
            <label for="name">Subscribe to a new Feed</label><br />
            <input id='name' name='name' type="text" placeholder="Enter a feed to subscribe">
            <input type="submit" />
        </form>
        <% sources.map(({id, url}) => { %>
            <li>
                <a href="/feeds/<%= id %>"><%= url %></a>
                <div>
                    <button onclick="build(<%= id %>)">build feed</button>
                    <button onclick="removeFeed(<%= id %>)">delete feed</button>
                </div>
            </li>
        <% }) %>
    </ul>
</div>
</body>
</html>

